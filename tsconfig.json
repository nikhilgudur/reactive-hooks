{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "react": ["./node_modules/react"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
